---
import Layout from '../layouts/Layout.astro';
---

<Layout title="GPravin - Welcome">
  <!-- Hero Section -->
  <div class="container mx-auto px-4 py-16 text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Main Heading -->
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
        Hello, I'm <span class="text-orange-600">Pravin</span>
      </h1>
      
      <!-- Tagline -->
      <p class="tagline text-xl md:text-2xl text-gray-600 mb-12 leading-relaxed">
        Living today as a story no other day can tell.
      </p>
      
      <!-- Call to Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <!-- Writing CTA -->
        <a 
          href="/writing" 
          class="bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          View My Writing
        </a>
        
        <!-- Contact CTA -->
        <a 
          href="/contact" 
          class="border-2 border-orange-600 text-orange-600 hover:bg-orange-600 hover:text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Get In Touch
        </a>
      </div>
    </div>
  </div>
  
  <!-- Additional Content Section -->
  <div class="bg-gray-50 py-16">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">
          Welcome to My Digital Space
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          This is where I share my thoughts, experiences, and creative work. 
          Explore my writing to discover stories and insights, or reach out to connect.
        </p>
      </div>
    </div>
  </div>
</Layout>
