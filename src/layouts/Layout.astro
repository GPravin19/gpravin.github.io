---
import '../styles/global.css';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content="GPravin - Personal Website" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="h-full bg-gray-50 text-gray-900">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex items-center">
            <h1 class="text-xl font-bold text-gray-900">GPravin</h1>
          </div>
          <nav class="flex space-x-8">
            <a href="/" class="text-gray-600 hover:text-gray-900 font-medium">Home</a>
            <a href="/writing" class="text-gray-600 hover:text-gray-900 font-medium">Writing</a>
            <a href="/contact" class="text-gray-600 hover:text-gray-900 font-medium">Contact</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content Container -->
    <div class="min-h-full">
      <main class="flex-1">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <slot />
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <p class="text-sm text-gray-300">Â© 2025 GPravin. All rights reserved.</p>
          </div>
          <div class="flex space-x-6">
            <a href="/writing" class="text-gray-300 hover:text-white text-sm">Writing</a>
            <a href="/contact" class="text-gray-300 hover:text-white text-sm">Contact</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
